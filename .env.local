# Krushak App - Environment Configuration
# This file contains the actual API keys and should not be committed to version control

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Google Gemini AI API
GEMINI_API_KEY=your-gemini-api-key-here

# Weather API (OpenWeatherMap)
OPENWEATHER_API_KEY=your-openweather-api-key-here

# YouTube Integration
YOUTUBE_API_KEY=your-youtube-api-key-here

# Firebase Cloud Messaging 
FCM_SERVER_KEY=your-fcm-server-key-here

# Payment Gateway
RAZORPAY_KEY_ID=rzp_test_key_for_development
RAZORPAY_KEY_SECRET=your-razorpay-secret-key

# CRON Security
CRON_SECRET=a_secure_random_string_for_cron_endpoints_auth

# App Configuration
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG_MODE=true

# Real-time Configuration
REALTIME_ENABLED=true
WEATHER_UPDATE_INTERVAL=600000  # 10 minutes in milliseconds
MARKET_UPDATE_INTERVAL=300000   # 5 minutes in milliseconds
